<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50.5dp"
                android:layout_alignParentBottom="true"
                android:elevation="8dp"
                android:translationZ="20dp"
    >

    <ImageView
        android:id="@+id/tab_utilView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tab_utilView"
        android:background="@color/tab_Color"
        >

        <RadioButton
            android:id="@+id/main_tab_home"
            style="@style/tab_RadioBtn_layout"
            android:background="@drawable/tab_state_home"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/main_tab_price"
            style="@style/tab_RadioBtn_layout"
            android:background="@drawable/tab_state_price"
            />

        <ImageView
            android:id="@+id/main_tab_center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/tabimage_selectot"
            android:src="@drawable/ic_tab_add_noamal"
            />

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/main_tab_center"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="170dp"-->
        <!--android:layout_weight="0.5"-->
        <!--android:layout_marginTop="5dp"-->
        <!--app:backgroundTint="@color/tabBarColor"-->
        <!--android:src="@mipmap/tab_bottom"-->
        <!--/>-->

        <RadioButton
            android:id="@+id/main_tab_partner"
            style="@style/tab_RadioBtn_layout"
            android:background="@drawable/tab_state_partner"
            />

        <RadioButton
            android:id="@+id/main_tab_mine"
            style="@style/tab_RadioBtn_layout"
            android:background="@drawable/tab_state_me"
            />

    </LinearLayout>


</RelativeLayout>