<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40.5dp"
                android:id="@+id/pay_type_layout"
                android:background="@drawable/btn_selecor"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/buy_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/buy_alipay"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/buy_type_type"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/buy_type_icon"
        android:text="微信支付"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/buy_type_boolView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/buy_selector"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>