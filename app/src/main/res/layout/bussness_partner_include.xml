<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fragment_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公司名称"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/include_businessPartner_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入公司名称"
            android:textSize="13sp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fragment_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公司地址"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/include_businessPartner_address_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入公司地址"
            android:textSize="13sp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fragment_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系方式"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/include_businessPartner_phoneNum_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入您的联系方式"
            android:inputType="phone|text"
            android:layout_marginRight="20dp"
            android:textSize="13sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fragment_bg"/>
</LinearLayout>