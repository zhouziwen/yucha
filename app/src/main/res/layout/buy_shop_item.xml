<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"

                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical"
    >


        <ImageView
            android:id="@+id/buy_shopIcon"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_hlist_item1"
            />

        <TextView
            android:id="@+id/buy_shopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/buy_shopIcon"
            android:text="原产施耐德（上海）开关电源 ABLBRP S24100 ABLB-RPS24"
            android:textColor="@color/price_textColor_pressed"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/buy_shopPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_shopTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/buy_shopIcon"
            android:text="￥1298.00"
            android:textColor="@color/price_viewColor"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/buy_shopNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buy_shopTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="x6"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/buy_shopWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/buy_shopPrice"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/buy_shopIcon"
            android:gravity="center"
            android:text="iOF-辅助节点    x1"
            />

        <TextView
            android:id="@+id/buy_shopWidgetNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/buy_shopNum"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/buy_shopWidget"
            android:gravity="center|right"
            android:visibility="gone"
            android:text="￥100.00"
            android:textColor="@color/price_viewColor"
            />

    </RelativeLayout>
