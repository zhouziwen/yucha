<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_selector"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/history_selectorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_title"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/circle"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/history_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/history_selectorView"
        android:scaleType="fitXY"
        android:background="@mipmap/home_hlist_item3"
        />

    <TextView
        android:id="@+id/history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/history_image"
        android:text="原产施耐德（上海）开关电源 ABLCOPs24100 ABL88"
        android:textColor="@color/price_textColor_pressed"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/history_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="太能电气太能电气"
        android:textColor="@color/price_textColor_nomal"
        android:layout_alignBaseline="@+id/history_location"
        android:layout_alignBottom="@+id/history_location"
        android:layout_alignStart="@+id/history_title"/>

    <TextView
        android:id="@+id/history_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/history_type"
        android:layout_alignStart="@+id/history_type"
        android:text="￥1298.00"
        android:textColor="@color/price_viewColor"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/history_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/history_type"
        android:layout_marginLeft="20dp"
        android:text="月销26件"
        android:textColor="@color/price_textColor_nomal"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/history_image"
        android:background="@color/white"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/imageView"
        android:background="@color/line"
        />

</RelativeLayout>