<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/topPadding"

              android:orientation="vertical"
             tools:context="com.example.hnTea.ui.me.user.AddAddressFragment">

   <com.example.hnTea.widget.AppTitleBar
       android:id="@+id/app_title_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   </com.example.hnTea.widget.AppTitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人    "
            android:textSize="15sp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/receiver_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="请填写收货人"
            android:textSize="13sp"
            android:background="@null"
            />
        
    </LinearLayout>

    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textSize="15sp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/receiver_phoneNum_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写收货人手机号"
            android:maxEms="11"
            android:padding="10dp"
            android:textSize="13sp"
            android:background="@null"
            android:inputType="phone"
            />

    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮政编码"
            android:textSize="15sp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/postNum_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写邮政编码"
            android:textSize="13sp"
            android:padding="10dp"
            android:background="@null"
            android:inputType="phone"
            />

    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="15sp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/address_detail_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写详细的收获地址"
            android:minLines="2"
            android:textSize="13sp"
            android:gravity="top"
            android:padding="10dp"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/dividerColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textSize="15sp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>
        <Switch
            android:id="@+id/add_new_address_switch"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
