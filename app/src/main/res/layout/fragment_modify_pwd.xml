<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             android:id="@+id/topPadding"
             tools:context="com.example.hnTea.ui.me.user.ModifyPwdFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.example.hnTea.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.hnTea.widget.AppTitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码    "
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/pwd_past_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="请输入原密码"
            android:maxEms="11"
            android:textSize="15sp"
            android:background="@null"/>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码    "
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/pwd_new_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:minEms="6"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@null"/>

    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/price_textColor_pressed"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/pwd_new_again_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:textSize="15sp"
            android:maxEms="11"
            android:padding="10dp"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>
