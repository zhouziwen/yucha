<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dividerColor"
                android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/home_listHeader_utilView1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/home_listHeader_LineLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_below="@+id/home_listHeader_utilView1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="热门商品"
        android:textColor="@color/price_textColor_pressed"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/home_listHeader_LineLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/home_listHeader_RecyclerView2"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="入驻商家"
        android:textColor="@color/price_textColor_pressed"
        android:textSize="18sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_listHeader_RecyclerView3"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_below="@+id/home_listHeader_LineLayout2"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/home_listHeader_LineLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/home_listHeader_RecyclerView3"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="产品分类"
        android:textColor="@color/price_textColor_pressed"
        android:textSize="18sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_listHeader_RecyclerView2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/home_listHeader_LineLayout"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:layout_marginTop="0.5dp"
        />


</RelativeLayout>