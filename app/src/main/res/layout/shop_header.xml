<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <TextView
        android:id="@+id/shop_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/shop_header_share"
        android:text="数据加载中..."
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/shop_header_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="分享"
        android:drawableTop="@mipmap/share"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/shop_header_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:layout_below="@+id/shop_header_title"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/price_viewColor"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/shop_header_shopType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:layout_below="@+id/shop_header_title"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/shop_header_price"
        android:layout_marginLeft="30dp"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/shop_header_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:layout_below="@+id/shop_header_title"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/shop_header_shopType"
        android:layout_marginLeft="50dp"
        android:textSize="13sp"
        />
    
    <ImageView
        android:id="@+id/shop_header_utilView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/dividerColor"
        android:layout_below="@+id/shop_header_inventory"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/shop_header_LineLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/shop_header_utilView"
        >
        <TextView
            android:id="@+id/shop_header_isYunFei"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="加载中..."
            android:gravity="center|left"
            android:drawableLeft="@mipmap/shop_yes"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/shop_header_isFaPiao"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="不提供发票"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/shop_yes"
            android:layout_weight="1"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/shop_header_isTime"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="加载中..."
            android:gravity="center|left"
            android:drawableLeft="@mipmap/shop_yes"
            android:layout_weight="1"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/shop_header_isZhiBao"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="180天质保期"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/shop_yes"
            android:layout_weight="1"
            android:textSize="12sp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/shop_header_utilView1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/dividerColor"
        android:layout_below="@+id/shop_header_LineLayout"
        />

    <RelativeLayout
        android:id="@+id/shopMsg_choseType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/shop_header_utilView1"
        android:background="@drawable/btn_selecor"
        >

        <TextView
            android:id="@+id/shop_header_choseType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="型号选择"
            android:drawableRight="@mipmap/shop_header_push"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/shop_header_utilView2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/shopMsg_choseType"
        android:background="@color/dividerColor"
        />

