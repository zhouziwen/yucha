<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.hnTea.ui.home.shop.BusinessHomeGoodsFragment">
    <LinearLayout
        android:id="@+id/business_home_select_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

 <LinearLayout
     android:layout_width="0dp"
     android:layout_weight="1"
     android:gravity="center"
     android:layout_height="match_parent">
     <ImageView
         android:id="@+id/sellNum_order_pic"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:src="@mipmap/order_pic_low"/>
     <TextView
         android:id="@+id/tv_sales_num"
         android:layout_width="wrap_content"
         android:layout_height="45dp"
         android:text="销量"
         android:gravity="center"/>
 </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/price_order_pic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/order_pic_low"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="价格"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/business_all_goods_gridView"
        android:layout_below="@id/business_home_select_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:background="@color/fragment_bg"
        >
    </GridView>

</RelativeLayout>
