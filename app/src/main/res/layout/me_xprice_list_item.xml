<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/me_xPrice_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="高压接触器"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/me_xPrice_pinpai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌：西门子"

        android:layout_below="@id/me_xPrice_title"/>
    <TextView
        android:id="@+id/me_xPrice_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量： 5台"
        android:layout_below="@id/me_xPrice_title"
        android:layout_toRightOf="@id/me_xPrice_pinpai"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/me_xPrice_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="型号： HK-56394"
        android:layout_below="@id/me_xPrice_count"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:textColor="@color/me_price_red_title"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/me_xPrice_canshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参数： HM-556849-fhdfb"
        android:layout_below="@id/me_xPrice_type"
        />


</RelativeLayout>