<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/home_HListView_Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <ImageView
        android:id="@+id/home_HListView_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/home_pic_product6"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/home_HListView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_HListView_image"
        android:text="高级变压器阿发萨芬阿发按时f"
        android:lines="2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/home_HListView_price"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_HListView_title"
        android:text="$360"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/price_viewColor"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>