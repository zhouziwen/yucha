<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/tab_Color"
    >

    <TextView
        android:id="@+id/state_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stateColor"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        />

    <TextView
        android:id="@+id/app_title_back"
        android:layout_width="@dimen/height_commen"
        android:layout_height="match_parent"
        android:layout_below="@+id/state_bar"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_selecor"
        android:drawableLeft="@mipmap/back"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/app_title_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:text="我的设置"
        android:layout_below="@+id/state_bar"
        android:gravity="center"
        android:textColor="@color/price_textColor_pressed"
        android:textSize="@dimen/textSize_title"/>

    <TextView
        android:id="@+id/app_title_action"
        style="@style/app_title_action_base_style"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/state_bar"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/app_title_action1"
        style="@style/app_title_action_base_style"
        android:layout_toLeftOf="@+id/app_title_action"
        android:layout_below="@+id/state_bar"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line"
        />

</RelativeLayout>