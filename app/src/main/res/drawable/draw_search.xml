<shape xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 填充的颜色：这里设置背景透明 -->
    <solid android:color="#f2f2f2" />
    <!-- 边框的颜色 ：不能和窗口背景色一样-->
    <stroke
        android:width="0.5dp"
        android:color="#e5e5e5" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners
        android:radius="15dp"   />
